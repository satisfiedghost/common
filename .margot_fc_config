# Things specific to the FC's

RUN_ODY_CMD="/root/MAX_OPUP2.2_starfish_dev/etc/Run_MAX_ODySSy.sh"
RUN_MAX_CMD="/root/MAX_OPUP2.2_starfish_dev/etc/Run_MAX.sh"

runmax() {
  echo "Starting MAX..."
  eval "$RUN_MAX_CMD"
  count=$(ps aux | grep '/data/post_max_boot.sh' | grep -v grep | wc -l )

  while [ $count -gt 0 ]; do
    echo "MAX is still booting..."
    sleep 0.5
    count=$(ps aux | grep '/data/post_max_boot.sh' | grep -v grep | wc -l )
  done
  echo "It's done now, get excited!!!"
}

runody() {
  echo "Starting MAX Odyssey..."
  eval "$RUN_ODY_CMD"
  count=$(ps aux | grep '/data/post_max_boot.sh' | grep -v grep | wc -l )

  while [ $count -gt 0 ]; do
    echo "MAX is still booting..."
    sleep 0.5
    count=$(ps aux | grep '/data/post_max_boot.sh' | grep -v grep | wc -l )
  done
  echo "It's done now, get excited!!!"
}

